{
  "name": "fastify-ts-template",
  "version": "0.0.0",
  "description": "This is a boiler plate for a microservice using fastify framework",
  "main": "dist/index.js",
  "engines": {
    "node": "15.14.0",
    "npm": "7.7.6"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "start": "node dist/index.js",
    "build": "rm -fr dist/ && tsc",
    "dev": "tsc && concurrently -k -p '[{name}]' -n 'TypeScript,App' -c 'yellow.bold,cyan.bold' 'tsc -w' 'nodemon dist/index.js'",
    "lint": "eslint . --ext .ts",
    "lint-fix": "npm run lint -- --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Ebuka Umeokonkwo",
  "license": "ISC",
  "dependencies": {
    "awilix": "~4.3.4",
    "dotenv": "~10.0.0",
    "fastify": "~3.18.1",
    "fastify-autoload": "~3.8.0",
    "fastify-plugin": "~3.0.0",
    "fastify-sensible": "~3.1.0",
    "mongoose": "~5.13.2",
    "redis": "~3.1.2"
  },
  "devDependencies": {
    "@types/http-errors": "~1.8.0",
    "@types/jest": "~26.0.23",
    "@types/node": "~16.0.0",
    "@types/redis": "~2.8.30",
    "@typescript-eslint/eslint-plugin": "~4.28.2",
    "@typescript-eslint/parser": "~4.28.2",
    "concurrently": "~6.2.0",
    "eslint": "~7.30.0",
    "eslint-plugin-radar": "~0.2.1",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "fastify-blipp": "~3.1.0",
    "fastify-tsconfig": "~1.0.1",
    "husky": "~7.0.0",
    "jest": "~27.0.6",
    "pino-pretty": "~5.1.0",
    "ts-jest": "~27.0.3",
    "typescript": "~4.3.5"
  }
}
